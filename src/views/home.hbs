<div class="mt-4 container">
    <div class="row">

        {{#each course}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <a href="/courses/{{this.slug}}/{{this.owner}}">
                    <img class="card-img-top default-img" src="{{this.img}}" alt="{{this.name}}">
                </a>
                <div class="dropdown-divider"></div>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}/{{this.owner}}" class="btn btn-primary">Xem khoa hoc</a>
                </div>
            </div>
        </div> 
        {{else}}
            <div class="container ">
                <h4>Bạn chưa đăng khóa học nào.
                    <a href="/courses/available/{{userId}}">Xem khóa học có sẵn.</a>
                </h4>
                <div class="container">
                    <img class="mx-auto d-block" width = "500" height="500" src="https://cied.edu.vn/image/data/Hello.jpg">
                </div>
            </div>
        {{/each}}

    </div>
</div>

