<div class="container mt-4">
    <h3>Dang nhap</h3>
    <form id="form" method="post">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control email" id="email" required >
        </div>
        <button type="button" class="btn btn-primary" id="btn-send" required >Đăng nhập</button>
    </form>
</div>


<script >
    document.addEventListener("DOMContentLoaded", function() {
        const receiver = document.querySelector('#email');
        const form = document.querySelector('#form');
        const btnSend = document.querySelector('#btn-send');
        btnSend.onclick = function() {
            const s = receiver.value.indexOf('@');
            var tk = '';
            for(let i = 0; i < s; i++){
                tk += receiver.value[i];
            }
            if(tk.length == 0) e.preventDefault();
            else {
                form.action = `login/${tk}`;
                form.submit();
            }
        }
    })


</script>