        <div class="form-group">
            <label for="">Ten khoa hoc</label>
            <input type="text"  class="form-control" name = "name">
        </div>

        <div class="form-group">
            <label for="">Mo ta</label>
            <textarea type="text" id="description" class="form-control" name = "description"></textarea>
        </div>

        <div class="form-group">
            <label for="">VideoId</label>
            <input type="text"  id="videoId" class="form-control" name ="videoId">
        </div>
        <button type="submit" data-id = "userId" id = "button" class="btn btn-primary">Submit</button>
    </form>
