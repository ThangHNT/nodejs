<div class="container">

  <table class="table mt-4">
    <div class="row justify-content-between">
        <div class="mt-4">
            <h3>Khoa hoc cua toi</h3>
            <a href="/courses/myCourses/trash/{{userId}}">Thung rac ({{count}})</a>
        </div>
        <div class="mt-4">
          <a href="/courses/create/{{userId}}">
              <button type="button" class="btn btn-primary">Them khoa hoc moi</button>
          </a>
        </div>
    </div>
    <thead>
        <tr>
              <th scope="col">#</th>
              <th scope="col">Course name</th>
              <th scope="col">Created at</th>
              <th scope="col">Updated at</th>
              <th scope="col"></th>
              <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
          {{#each courses}}
        <tr>
              <th scope="row">{{sum @index 1}}</th>
              <td>{{this.name}}</td>
              <td>{{getTimestamp this.createdAt}}</td>
              <td>{{getTimestamp this.updatedAt}}</td>
              <td><a href="http://localhost:3000/courses/myCourses/edit/{{this._id}}">Sua</a></td>
              <td><a href = "#" data-toggle="modal" data-id="{{this._id}}" data-target="#modal" >Xoa</a></td>
        </tr>
          {{else}}
            <td colspan="5" class ="text-center">
              Ban chua dang khoa hoc nao.
              <a href="/courses/create/{{userId}}">Dang khoa hoc moi</a>
            </td>
          {{/each}}
    </tbody>
  </table>
</div>

